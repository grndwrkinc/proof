+
+	$term_meta = get_option( 'autodescription-term-meta' );
+
+	foreach ( (array) $term_meta as $term_id => $meta ) {
+		add_term_meta( $term_id, THE_SEO_FRAMEWORK_TERM_OPTIONS, $meta, true );
+	}
